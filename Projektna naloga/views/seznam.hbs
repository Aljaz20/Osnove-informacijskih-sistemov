<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <h3><i class="fa-solid fa-earth-europe"></i>Iskanje turističnih
        zanimivosti</h3>
      <div id="destinacije">
        {{#each seznamDestinacij as |destinacija|}}
          <div id="{{destinacija.id}}" class="destinacija">
            <button
              type="button"
              class="btn btn-light btn-sm"
            >
              <i class="fas fa-plus"></i>
              <strong><span
                  class="ime"
                  dir="ltr"
                >{{destinacija.ime}}</span></strong>
              <span
                class="lat"
                style="display: none"
              >{{destinacija.zemljepisnaSirina}}</span>
              <span
                class="lng"
                style="display: none"
              >{{destinacija.zemljepisnaDolzina}}</span>
              <span
                class="vrstaDestinacije"
                style="display: none"
              >{{destinacija.vrstaDestinacije}}</span>
              <div style="display: none" class="text-nowrap"></div>
            </button>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <h3><i class="fas fa-shopping-cart me-2"></i>Košarica turističnih
        zanimivosti</h3>
      <div id="kosarica"></div>
      <div id="sporocilo"></div>
      <button
        id="racun_html"
        type="button"
        class="btn btn-success btn-sm"
        disabled
      >
        <i class="fa-solid fa-euro-sign"></i>Pripravi račun (HTML)
      </button>
      <button
        id="racun_xml"
        type="button"
        class="btn btn-success btn-sm"
        disabled
      >
        <i class="fa-solid fa-euro-sign"></i>Pripravi račun (XML)
      </button>
      <br />
      <div id="mapa_id" class="mt-3"></div>
      <div class="mapa_poti"></div>
      <div class="header">
        <span id="tekst">Največkrat dodane destinacije:</span>
        <select id="category">
          <option value="skupaj">Skupaj</option>
          <option value="živalski vrt">Živalski vrt</option>
          <option value="hostel">Hostel</option>
          <option value="atrakcija">Atrakcija</option>
          <option value="ostalo">Ostalo</option>
        </select>
        <button onclick="Prikazidestinacije()"><i class="fas fa-search"> </i>  <strong>Prikaži</strong></button>
      </div>
      <div id="topdestinacije">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ime</th>
                <th scope="col">Kategorija</th>
                <th scope="col">Št. dodanj</th>
            </tr>
            </thead>
            <tbody id="seznam-destinacij">
            </tbody>
        </table>
      </div>
      <div>
        <span id="tekst">Dodaj svojo najljubšo destinacijo</span>
        <input type="text" id="ime" placeholder="Ime destinacije">
        <button onclick="Dodajdestinacijo()"><i class="fas fa-plus"> </i>  <strong>Dodaj</strong></button>
      </div>
      <div>
        <span id="Odgovor"></span>
      </div>
      
    </div>
  </div>
</div>

<script src="skripte/seznam.js"></script>

<!-- leaflet knjižnica za poti -->
<script src="skripte/leaflet-routing-machine.js"></script>